<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp">

    <LinearLayout
        android:id="@+id/ll_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_result_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorViewBg"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_item_result_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="Username"/>
                    <TextView
                        android:id="@+id/tv_item_result_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_alignParentRight="true"
                        android:textSize="10sp"
                        android:gravity="right"
                        android:text="11:25 AM"/>

                    <TextView
                        android:id="@+id/tv_item_result_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:layout_below="@+id/tv_item_result_name"
                        android:textSize="14sp"
                        android:textColor="@color/colorItemText"
                        android:text="Hey Dianal! How are you doing?"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/colorTextBg">
                    <LinearLayout
                        android:id="@+id/ll_result_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_item_result_contact"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_message_red"/>
                        <TextView
                            android:id="@+id/tv_result_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Contact"
                            android:gravity="center"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_result_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_item_result_delete"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_delete"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Delete"
                            android:gravity="center"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_result_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_toLeftOf="@+id/ll_result_delete"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_item_result_edit"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_edit"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Edit"
                            android:gravity="center"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_result_report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_item_result_report"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_report"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/colorPrimary"
                            android:text="Report"
                            android:gravity="center"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_foreground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ll_result_item"
                android:layout_alignBottom="@+id/ll_result_item">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_blur"
                    android:scaleType="fitXY"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_result_upgrade_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_upgrade"/>
                <TextView
                    android:id="@+id/tv_upgrade_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    android:text="Upgrade To Read All Comments"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>