<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AboutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bg_main_header"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_home_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_back"
                android:padding="6dp"/>
            <ImageView
                android:id="@+id/iv_home_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_menu"
                android:padding="6dp"
                android:background="@drawable/rounded_tool_button"/>

            <ImageView
                android:id="@+id/iv_home_feed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@+id/iv_home_menu"
                android:src="@drawable/ic_feed"
                android:padding="6dp"
                android:background="@drawable/rounded_tool_button"/>

            <ImageView
                android:id="@+id/iv_home_message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/iv_home_feed"
                android:src="@drawable/ic_message"
                android:padding="6dp"
                android:background="@drawable/rounded_tool_button"/>

            <ImageView
                android:id="@+id/iv_home_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/iv_home_message"
                android:src="@drawable/ic_search_ed"
                android:padding="6dp"
                android:background="@drawable/rounded_tool_button"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorTextBg"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:gravity="center"
                android:text="ABOUT US"/>
            <ImageView
                android:id="@+id/iv_about_photo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/ic_logo_front"
                android:background="@drawable/bg_about"/>
            <TextView
                android:id="@+id/tv_about_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="A MESSAGE FROM THE CREATORS"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/tv_about_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="@string/about_hint_text"
                    android:textSize="16sp"/>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="200dp"
            android:layout_height="275dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimary"
            android:visibility="invisible"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_menu_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:text="My Account"/>
            <TextView
                android:id="@+id/tv_menu_faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:text="FAQS"/>
            <TextView
                android:id="@+id/tv_menu_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:text="About Us"/>
            <TextView
                android:id="@+id/tv_menu_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:text="Terms And Conditions"/>
            <TextView
                android:id="@+id/tv_menu_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:text="Privacy"/>
            <TextView
                android:id="@+id/tv_menu_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:text="Invite A Friend"/>

            <TextView
                android:id="@+id/tv_menu_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="#60FFFFFF"
                android:text="Version 1.00"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>