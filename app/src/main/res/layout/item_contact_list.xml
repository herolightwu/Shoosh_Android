<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorViewBg"
        android:orientation="horizontal"
        android:weightSum="7">
        <ImageView
            android:id="@+id/iv_item_contact_photo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_user"
            android:background="@drawable/circle_contact_bg"/>
        <TextView
            android:id="@+id/tv_item_contact_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:text="JackSon"/>

        <TextView
            android:id="@+id/tv_item_contact_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:textColor="@color/colorItemText"
            android:text="1234567890"/>
    </LinearLayout>

</LinearLayout>