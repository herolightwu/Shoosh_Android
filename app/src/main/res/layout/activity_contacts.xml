<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ContactsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bg_main_header"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_home_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_back"
                android:padding="6dp"/>

            <EditText
                android:id="@+id/et_contact_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/iv_home_back"
                android:layout_toLeftOf="@+id/iv_search_act"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@drawable/rounded_edittext"/>
            <ImageView
                android:id="@+id/iv_search_act"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_search_ed"/>
            <!--<ImageView
                android:id="@+id/iv_home_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_menu"
                android:padding="6dp"
                android:background="@drawable/rounded_tool_button"/>

            <ImageView
                android:id="@+id/iv_home_feed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@+id/iv_home_menu"
                android:src="@drawable/ic_feed"
                android:padding="6dp"
                android:background="@drawable/rounded_tool_button"/>

            <ImageView
                android:id="@+id/iv_home_message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/iv_home_feed"
                android:src="@drawable/ic_message"
                android:padding="6dp"
                android:background="@drawable/rounded_tool_button"/>

            <ImageView
                android:id="@+id/iv_home_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/iv_home_message"
                android:src="@drawable/ic_search"
                android:padding="6dp"
                android:background="@drawable/rounded_tool_button"/>-->
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cont_recyclerView" />
</LinearLayout>