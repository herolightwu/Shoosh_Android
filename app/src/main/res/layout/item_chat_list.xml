<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_item_chat_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="8dp"
            android:background="@drawable/bg_chat_send">

            <TextView
                android:id="@+id/tv_item_chat_send_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:text="ajfkfgd"/>
            <TextView
                android:id="@+id/tv_item_chat_send_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tv_item_chat_send_content"
                android:gravity="right"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:text="10:30 AM"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_chat_receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_margin="8dp"
            android:background="@drawable/bg_chat_receive">

            <TextView
                android:id="@+id/tv_item_chat_receive_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="12dp"
                android:textColor="#A0000000"
                android:textSize="16sp"
                android:text="dshfsa"/>
            <TextView
                android:id="@+id/tv_item_chat_receive_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tv_item_chat_receive_content"
                android:gravity="right"
                android:textColor="#60000000"
                android:textSize="12sp"
                android:text="10:30 AM"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>