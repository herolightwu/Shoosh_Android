<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ChatActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bg_main_header"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_home_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_back"
                android:padding="6dp"/>
            <ImageView
                android:id="@+id/iv_home_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_menu"
                android:padding="6dp"
                android:background="@drawable/rounded_tool_button"/>

            <ImageView
                android:id="@+id/iv_home_feed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_toLeftOf="@+id/iv_home_menu"
                android:src="@drawable/ic_feed"
                android:padding="6dp"
                android:background="@drawable/rounded_tool_button"/>

            <ImageView
                android:id="@+id/iv_home_message"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/iv_home_feed"
                android:src="@drawable/ic_message"
                android:padding="6dp"
                android:background="@drawable/rounded_tool_button"/>

            <ImageView
                android:id="@+id/iv_home_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@+id/iv_home_message"
                android:src="@drawable/ic_search_ed"
                android:padding="6dp"
                android:background="@drawable/rounded_tool_button"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e0e0"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_chat_control"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorViewBg">
            <ImageView
                android:id="@+id/iv_chat_restrict"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_restrict"/>
            <ImageView
                android:id="@+id/iv_chat_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="24dp"
                android:layout_toLeftOf="@+id/iv_chat_restrict"
                android:src="@drawable/ic_delete_gray"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_chat_send_message"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/iv_chat_start"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_add"/>
            <ImageView
                android:id="@+id/iv_chat_send"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:src="@drawable/ic_goto"/>
            <EditText
                android:id="@+id/et_chat_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_chat_start"
                android:layout_toLeftOf="@+id/iv_chat_send"
                android:background="@color/colorWhite"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_chat_send_message"
            android:layout_below="@+id/rl_chat_control"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_chat_more"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="Show previous messages"
                android:textColor="@color/colorBlue"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="200dp"
            android:layout_height="275dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimary"
            android:visibility="invisible"
            android:padding="8dp">
            <TextView
                android:id="@+id/tv_menu_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:text="My Account"/>
            <TextView
                android:id="@+id/tv_menu_faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:text="FAQS"/>
            <TextView
                android:id="@+id/tv_menu_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:text="About Us"/>
            <TextView
                android:id="@+id/tv_menu_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:text="Terms And Conditions"/>
            <TextView
                android:id="@+id/tv_menu_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:text="Privacy"/>
            <TextView
                android:id="@+id/tv_menu_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:text="Invite A Friend"/>

            <TextView
                android:id="@+id/tv_menu_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="#60FFFFFF"
                android:text="Version 1.00"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>