<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorViewBg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_thread_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Username"/>
        <TextView
            android:id="@+id/tv_item_thread_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:gravity="right"
            android:text="11:25 AM"/>

        <TextView
            android:id="@+id/tv_item_thread_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/tv_item_thread_name"
            android:layout_toLeftOf="@+id/rl_item_thread_option"
            android:textSize="14sp"
            android:textColor="@color/colorItemText"
            android:text="Hey Dianal! How are you doing?"/>

        <RelativeLayout
            android:id="@+id/rl_item_thread_option"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:padding="4dp">

            <Spinner
                android:id="@+id/sp_item_thread_option"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/iv_item_thread_option"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_down_option"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>